@model EjercicioClavesABM.Models.Novedad

@{
    ViewBag.Title = "Borrar";
}

<h2>Esta seguro que desea borrar la Novedad: <em>"@Model.Titulo"</em>. </h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <img src="@Url.Content(Model.Imagen)" class="img-responsive text-center" alt="Imagen">
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color text-center">
        <input type="submit" value="Borrar" class="btn btn-danger" /> 
        @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })
    </div>
    }
</div>
